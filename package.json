{
  "name": "ons-mierloos-theater",
  "private": true,
  "workspaces": [
    "shared",
    "web",
    "worker"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=web",
    "build": "npm run build --workspace=web",
    "start": "npm run start --workspace=web",
    "lint": "npm run lint --workspace=web",
    "lint:fix": "npm run lint:fix --workspace=web",
    "format": "prettier --write .",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "db:generate": "npm run db:generate --workspace=shared",
    "db:migrate": "npm run db:migrate --workspace=shared",
    "db:seed": "node scripts/seed-database.mjs",
    "worker": "npm run worker --workspace=worker",
    "worker:watch": "npm run worker:watch --workspace=worker"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/ui": "^4.0.18",
    "baseline-browser-mapping": "^2.9.19",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.3",
    "happy-dom": "^20.4.0",
    "prettier": "^3.7.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
